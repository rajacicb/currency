<UserControl x:Class="OptionsModule.Dialogs.OptionsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding CurrencyCollection}" SelectedItem="{Binding SelectedCurrency}" DisplayMemberPath="DisplayName" Margin="10"/>
        <StackPanel Grid.Column="1" Margin="10,10,20,0">
            <Button Command="{Binding AddCommand}" Content="Add" Margin="0,0,0,5"/>
            <Button Command="{Binding EditCommand}" Content="Edit" Margin="0,0,0,5"/>
            <Button Command="{Binding DeleteCommand}" Content="Delete" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Command="{Binding OKCommand}" Content="OK"  Width="75" Height="25"/>
            <Button Command="{Binding CancelCommand}" Content="Cancel"  Width="75" Height="25" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
